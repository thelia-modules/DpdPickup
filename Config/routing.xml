<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="dpdpickup.searchroute" path="/module/dpdpickup/{zipcode}/{city}" methods="get">
        <default key="_controller">DpdPickup\Controller\SearchCityController::searchAction</default>
        <requirement key="zipcode">\d{5}</requirement>
        <requirement key="city">.+</requirement>
    </route>

    <route id="dpdpickup.import" path="/admin/module/dpdpickup/import" methods="post">
        <default key="_controller">DpdPickup\Controller\ImportController::importFile</default>
    </route>

    <route id="dpdpickup.export" path="/admin/module/dpdpickup/exportgo" methods="post">
        <default key="_controller">DpdPickup\Controller\Export::exportfile</default>
    </route>

	<route id="dpdpickup.export.exaprint" path="/admin/module/dpdpickup/export" methods="post">
		<default key="_controller">DpdPickup\Controller\ExportExaprint::export</default>
	</route>

	<route id="dpdpickup.edit.prices" path="/admin/module/dpdpickup/prices" methods="post">
		<default key="_controller">DpdPickup\Controller\EditPrices::editprices</default>
	</route>

    <route id="dpdpickup.edit.freeshipping" path="/admin/module/dpdpickup/freeshipping" methods="post">
        <default key="_controller">DpdPickup\Controller\FreeShipping::set</default>
    </route>

    <route id="dpdpickup.edit.freeshipping_amount" path="/admin/module/dpdpickup/freeshipping_amount" methods="post">
        <default key="_controller">DpdPickup\Controller\FreeShipping::amountAction</default>
    </route>

    <route id="dpdpickup.config" path="/admin/module/dpdpickup/config" methods="post">
        <default key="_controller">DpdPickup\Controller\ConfigurationController::configureAction</default>
    </route>

    <route id="dpdpickup.api.config" path="/admin/module/dpdpickup/api-config" methods="post">
        <default key="_controller">DpdPickup\Controller\ConfigurationController::configureApiAction</default>
    </route>

    <route id="dpdpickup.labels" path="/admin/module/DpdPickup/labels">
        <default key="_controller">DpdPickup\Controller\LabelController::showAction</default>
    </route>

    <route id="dpdpickup.save.label" path="/admin/module/DpdPickup/saveLabel">
        <default key="_controller">DpdPickup\Controller\LabelController::saveAction</default>
    </route>

    <route id="dpdpickup.download.label" path="/admin/module/DpdPickup/labels-file/{base64EncodedFilename}">
        <default key="_controller">DpdPickup\Controller\LabelController::downloadAction</default>
    </route>

    <route id="dpdpickup.show.label" path="/admin/module/DpdPickup/getLabel/{orderRef}">
        <default key="_controller">DpdPickup\Controller\LabelController::getLabelAction</default>
    </route>

    <route id="dpdpickup.delete.label" path="/admin/module/DpdPickup/deleteLabel">
        <default key="_controller">DpdPickup\Controller\LabelController::deleteLabelAction</default>
    </route>

    <route id="dpdpickup.generate.label" path="/admin/module/DpdPickup/generateLabel">
        <default key="_controller">DpdPickup\Controller\LabelController::generateLabelAction</default>
    </route>
</routes>
