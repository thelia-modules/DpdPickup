<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="dpdpickup.saveslice" path="/admin/module/dpdpickup/saveslice" methods="post">
        <default key="_controller">DpdPickup:Slice:saveSlice</default>
    </route>

    <route id="dpdpickup.deleteslice" path="/admin/module/dpdpickup/deleteslice" methods="post">
        <default key="_controller">DpdPickup:Slice:deleteSlice</default>
    </route>

    <route id="dpdpickup.searchroute" path="/module/dpdpickup/{zipcode}/{city}" methods="get">
        <default key="_controller">DpdPickup\Controller\SearchCityController::searchAction</default>
        <requirement key="zipcode">\d{5}</requirement>
        <requirement key="city">.+</requirement>
    </route>

    <route id="dpdpickup.import" path="/admin/module/dpdpickup/import" methods="post">
        <default key="_controller">DpdPickup\Controller\ImportController::importFile</default>
    </route>

    <route id="dpdpickup.export" path="/admin/module/dpdpickup/exportgo" methods="post">
        <default key="_controller">DpdPickup\Controller\Export::exportfile</default>
    </route>

	<route id="dpdpickup.export.exaprint" path="/admin/module/dpdpickup/export" methods="post">
		<default key="_controller">DpdPickup\Controller\ExportExaprint::export</default>
	</route>

    <route id="dpdpickup.edit.freeshipping" path="/admin/module/dpdpickup/freeshipping" methods="post">
        <default key="_controller">DpdPickup\Controller\FreeShipping::set</default>
    </route>

    <route id="dpdpickup.edit.freeshipping_amount" path="/admin/module/dpdpickup/freeshipping_amount" methods="post">
        <default key="_controller">DpdPickup\Controller\FreeShipping::amountAction</default>
    </route>

    <route id="dpdpickup.config" path="/admin/module/dpdpickup/config" methods="post">
        <default key="_controller">DpdPickup\Controller\ConfigurationController::configureAction</default>
    </route>
</routes>
